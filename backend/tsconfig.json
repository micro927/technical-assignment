{
  "esModuleInterop": true,
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },

  "exclude": ["node_modules", "dist"],

  "include": ["src/**/*", "tests/**/*.spec.ts"],
  "files": ["src/index.ts"]
}
